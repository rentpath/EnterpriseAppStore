<% title 'Sign Up' %>

<p id="notice"><%= @notice %></p>

<%= form_for(@user, :html => { 'data-ajax'=>false }) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div><%= f.email_field :email, :autofocus => true, :placeholder => 'email' %></div>
    <div><%= f.password_field :password, :placeholder => 'password' %></div>
    <div><%= f.password_field :password_confirmation, :placeholder => 'password confirmation' %></div>
    <div><%= f.submit "Sign up" %></div>
<% end %>

<%= link_to "Sign in", '/users/sign_in' %><br />